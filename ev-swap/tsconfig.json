    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
    "paths": {
      "@/*": ["./*"]
    }
  }
}
